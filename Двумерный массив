#include <iostream>
int main()
{
   int A[100][100]={0};
   int st=0;
   int N;
   int K;
   std::cin>>N>>K;
   for(int i=0;i<N;i++){
    for(int j=0;j<K;j++){
        std::cin>>A[i][j];
        }
   }
   for(int i=0;i<N;i++){
    for(int j=0;j<K;j++){
    st = st+ A[i][j];
   }
   std::cout<<st<<" ";
   st=0;
   }
   std::cout<<std::endl;
   for(int j=0;j<K;j++){
    for(int i=0;i<N;i++){
    st = st+ A[i][j];
   }
   std::cout<<st<<" ";
   st=0;
    }
    std::cout<<std::endl;
    std::cout<<std::endl;
    for(int i=0;i<N;i++){
        for(int j=0;j<K;j++){
            std::cout<<A[i][j]<<" ";
   }
   std::cout<<std::endl;
   }

return 0;
   }
